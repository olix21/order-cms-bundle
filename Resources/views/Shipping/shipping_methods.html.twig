{# Dywee\OrderBundle\Resources\View\Basket\shipping.html.twig #}

{% extends '@DyweeOrderCMSBundle/layout.html.twig' %}

{% block metaTitle %}
    Méthodes de livraison {{ parent() }}
{% endblock %}

{% set current_checkout_step = 3 %}

{% block body %}

    <div class="spacer"></div>

    {% include '@DyweeOrderCMSBundle/Checkout/checkout-wizard.html.twig' %}

    <h1>Méthode de livraison</h1>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Veuillez choisir une méthode de livraison</h2>
            </div>
            <div class="panel-body">
                <p class="h4">Votre commande sera expediée en {{ order.shipments|length }} envoi{% if order.shipments|length > 1 %}s{% endif %}</p>
                {{ form_start(form) }}

                {{ form_row(form.shippingMethod) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-2">
                        <button type="submit" class="btn btn-success btn-block">Continuer <i class="fa fa-angle-right"></i> </button>
                    </div>
                </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block js_footer %}
{% endblock %}
